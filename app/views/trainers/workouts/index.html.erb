<div class="row flex-nowrap">
  <%= render 'layouts/trainer_sidebar' unless browser.mobile? %>

  <div class="col py-3">
    <%= breadcrumbs %>

    <div class="row mt-md-5 mt-1">
      <div class="col-md-10 offset-md-1">
        <div class="row">
          <h3>
            Custom Workouts
            <%= link_to 'New Workout',
                        new_trainers_workout_path,
                        class: 'btn btn-success float-end'
            %>
          </h3>
        </div>

        <div class="row">
          <table class="table table-striped table-hover text-center">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Muscle Group</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% if @workouts.any? %>
                <% @workouts.each do |workout| %>
                  <tr>
                    <td><%= workout.name %></td>
                    <td><%= workout.muscle_group.name %></td>
                    <td><%= link_to 'Edit', edit_trainers_workout_path(workout) %></td>
                  </tr>
                <% end %>
              <% else %>
                <tr>
                  <td colspan='3'>No Custom Workouts</td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="col-6 offset-3 text-center">
            <%= pagy_bootstrap_nav(@pagy).html_safe %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
