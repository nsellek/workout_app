
<div class="row mt-md-5 mt-sm-1">
  <div class="col col-md-4 offset-md-4">
    <div class="card text-center">
      <div class="card-header">
        <h2>Log in</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-floating mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'name@example.com' %>
            <%= f.label :email, 'Email Address' %>
          </div>

          <div class="form-floating mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: 'password' %>
            <%= f.label :password %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-check mb-3 text-start">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <%= f.submit "Log in", class: 'btn btn-primary mb-3' %>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
