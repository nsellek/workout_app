<div
  id="<%= widget.file_name %>"
  class="<%= widget.width %> widget"
>
  <div class="shadow card p2 text-center">
    <div class="card-body">
      <h5 class="card-title"><%= widget.name %></h5>
      <div class="card-text content">
          <div class="spinner-border <%= spinner_color %>" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
      </div>
    </div>
  </div>
</div>
