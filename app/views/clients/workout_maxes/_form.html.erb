<div class="row mt-5">
  <div class="col">
    <div class="card shadow text-center">
      <div class="card-header">
        <h3 class="card-title"><%= title %></h3>
      </div>
      <div class="card-body">
        <%= form_for [:clients, max], html: {id: 'maxes', class: 'workout_max_form'}  do |f| %>
          <%= f.hidden_field :workout_id, class: 'workout_id' %>

          <div class="form-floating mb-3">
            <%= text_field_tag 'workout',
                               f.object.workout_name,
                               class: 'form-control autocomplete',
                               placeholder: 'workout',
                               disabled: f.object.persisted?
            %>
            <%= label_tag 'Workout' %>
          </div>

          <div class="form-floating mb-3">
            <%= f.text_field :amount, class: 'form-control', placeholder: 'amount' %>
            <%= f.label :amount, 'Max' %>
          </div>

          <%= f.submit "Save", class: 'btn btn-success w-100' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
