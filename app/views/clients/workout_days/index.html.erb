<div id="workouts" class="row mt-3 gy-4">
  <% if @workout_day.nil? %>

  <% else %>
    <% @workout_day.exercises.each do |exercise| %>
      <div class="col-12">
        <div class="shadow card p2">
          <div class="card-header">
            <p class="card-title">
              <span class="float-start">
                <%= exercise.name %><br>
                <span class="subtitle text-danger"><%= exercise.notes %></span>
              </span>
              <span class="float-end text-muted"><%= exercise.sets_reps %></span>
            </p>
          </div>

          <div class="card-body py-0">
            <ul id="sets-<%= exercise.id %>" class="list-group list-group-flush">
              <%= render exercise.workout_sets %>
            </ul>
          </div>

          <div class="card-footer text-center">
            <div class="btn-group w-100">
                <%= link_to 'Add Set',
                            new_clients_exercise_workout_set_path(exercise),
                            class: 'btn btn-outline-primary',
                            data: {
                              turbo_frame: 'modal'
                            }
                %>
              <%#= link_to 'Volume', '#!', class: 'btn btn-outline-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag 'sets_script' %>
