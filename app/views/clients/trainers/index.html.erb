<div class="row mt-4">
  <div class="row">
    <h3>Current Trainer</h3>
  </div>
  <div class="row">
    <% if @current_trainer.nil? %>
      <div class="col mx-auto">
        <div class="card shadow p-2 text-center">
          <div class="card-body">
            <div class="card-title">
              No Current Trainer
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="col mx-auto">
        <div class="card shadow p-2">
          <div class="card-body">
            <div class="row g-0">
              <div class="col-9 position-relative">
                <h4 class="position-absolute top-50 translate-middle-y">
                  <%= @current_trainer.fullname %>
                </h4>
              </div>
              <div class="col-3 text-center">
                <%= link_to clients_trainer_path(@current_trainer), method: :delete do %>
                  <i class="fa-solid fa-ban"></i><br>
                  Remove
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @past_trainers.any? %>
    <div class="row mt-4">
      <h3>Past Trainers</h3>
    </div>
    <div class="row">
      <ul class="list-group list-group-flush">
        <% @past_trainers.each do |trainer| %>
          <li class="list-group-item"><%= trainer.fullname %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>