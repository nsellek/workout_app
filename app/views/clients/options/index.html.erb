<div id="options" class="row mt-4">
  <div class="col-12">
    <ul class="list-group">
      <%= link_to clients_profile_path, class: 'list-group-item list-group-item-action w-100' do %>
        <i class="fa-solid fa-user"></i>
        Profile
        <span class="float-end">
          <i class="fa-solid fa-chevron-right"></i>
        </span>
      <% end %>
      <%= link_to accounts_path, class: 'list-group-item list-group-item-action w-100' do %>
        <i class="fa-solid fa-repeat"></i>
        Switch Accounts
        <span class="float-end">
          <i class="fa-solid fa-chevron-right"></i>
        </span>
      <% end %>
    </ul>

    <ul class="list-group mt-3">
      <%= link_to clients_workout_maxes_path, class: 'list-group-item list-group-item-action w-100' do %>
        <i class="fa-solid fa-dumbbell"></i>
        Manage Maxes
        <span class="float-end">
          <i class="fa-solid fa-chevron-right"></i>
        </span>
      <% end %>
    </ul>

    <ul class="list-group mt-3">
      <%= link_to clients_trainers_path, class: 'list-group-item list-group-item-action w-100' do %>
        <i class="fa-solid fa-user"></i>
        Trainer History
        <span class="float-end">
          <i class="fa-solid fa-chevron-right"></i>
        </span>
      <% end %>
    </ul>

    <ul class="list-group mt-3">
      <%= link_to destroy_user_session_path,
                  class: 'list-group-item list-group-item-action w-100 text-danger',
                  method: :delete do
      %>
        <i class="fa-solid fa-arrow-right-from-bracket"></i>
        Logout
        <span class="float-end">
          <i class="fa-solid fa-chevron-right"></i>
        </span>
      <% end %>
    </ul>
  </div>
</div>
