<nav
  class="navbar navbar-dark sticky-top navbar-expand-lg bg-dark"
  style=<%= config_helper(:nav_color) %>
>
  <div class="container-fluid">
    <% if @back_url %>
      <%= link_to @back_url,
                  class: 'navbar-toggler me-auto',
                  style: config_helper(:nav_text_color) do
      %>
        <i class="fa-solid fa-chevron-left navbar-icon"></i>
      <% end %>
    <% else %>
      <div class="m-auto"></div>
    <% end %>
    <%= link_to app_name,
                clients_dashboard_path,
                class: 'navbar-brand',
                style: config_helper(:nav_text_color)
    %>
    <button
      class="navbar-toggler ms-auto"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown"
      aria-expanded="false"
      aria-label="Toggle navigation"
      style=<%= config_helper(:nav_text_color) %>
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav flex-column flex-wrap ms-md-auto">
        <li class="nav-item">
          <%= link_to 'Switch Accounts',
                      accounts_path,
                      class: 'nav-link',
                      style: config_helper(:nav_text_color)
          %>
        </li>
        <li class="nav-item">
          <%= button_to 'Logout',
                        destroy_user_session_path,
                        method: :delete,
                        class: 'nav-link btn btn-link',
                        style: config_helper(:nav_text_color)
          %>
        </li>
      </ul>
    </div>
  </div>
</nav>
